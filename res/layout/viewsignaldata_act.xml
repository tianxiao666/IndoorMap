<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="wrap_content"
      	android:layout_height="wrap_content"
      	android:text="@string/signal_point_label"
      	android:padding="10dp"
        	  />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signal_point_X"
            android:textColor="@color/gray3"
            android:textSize="12sp"/>
        <TextView 
            android:id="@+id/point_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signal_point_Y"
            android:textColor="@color/gray3"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"/>
        <TextView 
            android:id="@+id/point_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/date_choose_label"
        android:padding="10dp"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_begin_label"
            android:textColor="@color/gray3"
            android:textSize="12sp"/>
        <TextView 
            android:id="@+id/date_begin_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_end_label"
            android:textColor="@color/gray3"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/date_end_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opera_label"
        android:padding="10dp"/>
    <LinearLayout 
       	android:layout_height="wrap_content"
       	android:layout_width="match_parent"
       	android:orientation="horizontal"
       	android:paddingLeft="20dp">
         <Button 
            android:id="@+id/date_picker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_picker_btn_label"
            android:background="@drawable/bg_date_choose_btn"/>
         <RadioGroup 
             android:id="@+id/radio_group"
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:orientation="horizontal"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="-10dp"
             >
            <RadioButton 
                android:id="@+id/radio_wifi"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/wifi_label"
                android:textColor="@color/gray3"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
            <RadioButton 
                android:id="@+id/radio_station"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/station_label"
                android:textColor="@color/gray3"
                android:scaleX="0.8"
                android:scaleY="0.8"/>
         </RadioGroup>
         <Button 
            android:id="@+id/sure_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/do_sure"
            android:background="@drawable/bg_btn_check"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView 
        	android:layout_height="wrap_content"
        	android:layout_width="match_parent"
        	android:layout_gravity="center"
        	android:gravity="center"
        	android:text="@string/signal_chart_title"
        	android:textSize="24sp"
        	android:layout_marginTop="20dp"
        	/>
    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="20dp" 
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>
    <TextView 
        android:id="@+id/no_chart_text"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/no_chart_label"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
</ScrollView>