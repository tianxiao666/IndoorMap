<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5px"/>
			<solid android:color="@color/blue_light"/>
			<padding 
			    android:left="5px"
			    android:top="5px"
			    android:right="5px"
			    android:bottom="5px"/>
			<stroke 
			    android:width="1px"
			    android:color="@color/border_gray"/>
        </shape>
    </item>
	<item>
	   <shape>
	        <corners android:radius="5px"/>
			<solid android:color="@color/btn_bg_color"/>
			<padding 
			    android:left="5px"
			    android:top="5px"
			    android:right="5px"
			    android:bottom="5px"/>
			<stroke 
			    android:width="1px"
			    android:color="@color/border_gray"/>
	   </shape>
	</item>
</selector>
